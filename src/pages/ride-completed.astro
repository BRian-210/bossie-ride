
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import AppHeader from '@/components/common/AppHeader.tsx'
import AppBottomNav from '@/components/common/AppBottomNav.tsx'
import RideCompletedContent from '@/components/ride-completed/RideCompletedContent.tsx'
---

<BaseLayout title="Ride Completed - Bossie Ride">
  <AppHeader 
    client:load 
    title="Ride Completed"
    showBackButton={true}
    showNotifications={false}
  />
  
  <main class="pb-20 pt-4">
    <div class="container px-4">
      <RideCompletedContent client:load />
    </div>
  </main>

  <AppBottomNav client:idle activeItem="home" />
</BaseLayout>

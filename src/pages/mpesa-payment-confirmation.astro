
---
import BaseLayout from '@/layouts/BaseLayout.astro'
import AppHeader from '@/components/common/AppHeader.tsx'
import MpesaPaymentConfirmation from '@/components/mpesa-payment-confirmation/MpesaPaymentConfirmation.tsx'
import AppBottomNav from '@/components/common/AppBottomNav.tsx'
---

<BaseLayout title="M-Pesa Payment Confirmation - Bossie Ride">
  <AppHeader 
    client:load 
    showBackButton={true}
    title="Payment Confirmation"
  />
  
  <main class="min-h-[calc(100vh-64px-64px)] pb-20">
    <MpesaPaymentConfirmation client:load />
  </main>

  <AppBottomNav client:idle activeItem="home" />
</BaseLayout>
